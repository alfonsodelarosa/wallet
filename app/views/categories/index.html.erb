<% if notice %>
  <div class="alert alert-primary above-message" role="alert">
    <%= notice %>
  </div>
<% end %>
<h1>Categories</h1>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Actions</th>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td>
            <%= link_to edit_category_path(category) do %>
              <span data-feather="edit" color="orange"></span>
            <% end %>
            <%= link_to category, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span data-feather="x" color="red"></span>
            <% end %>
          </td>
          <td>
            <%= link_to category.name, category_sub_categories_path(category), 'data-toggle' => "collapse", href:"#collapseExample#{category.id}"  %>
            <%= collapse_div(category.id) do %>
              <table class="table table-striped table-sm">
                <thead>
                  <tr>
                    <th>Actions</th>
                    <th>Name</th>
                    <th>Description</th>
                  </tr>
                </thead>
                <tbody>
                  <% category.sub_categories.each do |sub_category| %>
                    <%= render 'sub_categories/sub_categories', category: category, sub_category: sub_category %>
                  <% end %>
                  <tr>
                    <td>
                      <%= link_to 'New Sub Category', new_category_sub_category_path(category), class:"btn btn-success" %>
                    </td>
                  </tr>
                </tbody>
              </table>
            <% end %>
          </td>
          <td><%= category.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Category', new_category_path %>
</div>
