<% if notice %>
<div class="alert alert-primary" role="alert">
  <%= notice %>
</div>
<% end %>

<h1><%= @category.name %> Sub Categories</h1>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Actions</th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @sub_categories.each do |sub_category| %>
      <tr>
        <td>
          <%= link_to edit_category_sub_category_path(@category,sub_category) do %>
            <span data-feather="edit"></span>
          <% end %>
          <%= link_to category_sub_category_path(@category,sub_category), method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span data-feather="x"></span>
          <% end %>
        </td>
        <td><%= sub_category.name %></td>
        <td><%= sub_category.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sub Category', new_category_sub_category_path(@category) %>
<%= link_to 'Categories', categories_path %>
