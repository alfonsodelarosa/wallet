<table id="table_category_<%= category.id %>" class="table table-striped table-sm collapse ">
  <thead>
    <tr>
      <th>Actions</th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% category.sub_categories.each do |sub_category| %>
      <tr id="tr_<%= sub_category.id %>">
       <td>
         <%= link_to edit_category_sub_category_path(category,sub_category) do %>
           <span data-feather="edit" color="orange"></span>
         <% end %>
         <%= link_to category_sub_category_path(category,sub_category), remote: true,  method: :delete, data: { confirm: 'Are you sure?' } do %>
         <span data-feather="x" color="red"></span>
         <% end %>
       </td>
       <td><%= sub_category.name %></td>
       <td><%= sub_category.description %></td>
      </tr>
    <% end %>
    <%= form_for([category,SubCategory.new]) do |form| %>
     <tr>
        <td>
          <div class="actions">
            <%= form.submit "Submit", class: 'btn btn-success' %>
          </div>
        </td>
        <td>
          <div class="form-group">
            <%= form.text_field :name, class: "form-control" %>
          </div>
        </td>
        <td>
          <div class="form-group">
            <%= form.text_field :description, class: "form-control" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
